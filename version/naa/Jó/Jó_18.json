{
  "livro": "Jó",
  "capítulo": 18,
  "versículos": {
    "1": {
      "título": "A terra será abandonada por sua causa?",
      "texto": "Então Bildade, o suíta, tomou a palavra e disse:"
    },
    "2": {
      "título": "",
      "texto": "“Até quando você andará"
    },
    "3": {
      "título": "",
      "texto": "Por que somos considerados"
    },
    "4": {
      "título": "",
      "texto": "Você, que se despedaça"
    },
    "5": {
      "título": "O fim do ímpio",
      "texto": "“Na verdade, a luz do ímpio"
    },
    "6": {
      "título": "",
      "texto": "A luz se escurecerá na sua tenda,"
    },
    "7": {
      "título": "",
      "texto": "Os seus passos vigorosos"
    },
    "8": {
      "título": "",
      "texto": "Porque por seus próprios pés"
    },
    "9": {
      "título": "",
      "texto": "A armadilha o apanhará"
    },
    "10": {
      "título": "",
      "texto": "A corda está escondida na terra"
    },
    "11": {
      "título": "",
      "texto": "Terrores o amedrontam"
    },
    "12": {
      "título": "",
      "texto": "A calamidade virá faminta"
    },
    "13": {
      "título": "",
      "texto": "Ela devorará os membros"
    },
    "14": {
      "título": "",
      "texto": "O ímpio será arrancado"
    },
    "15": {
      "título": "",
      "texto": "Nenhum dos seus irá morar"
    },
    "16": {
      "título": "",
      "texto": "Por baixo secarão as suas raízes,"
    },
    "17": {
      "título": "",
      "texto": "A sua memória desaparecerá"
    },
    "18": {
      "título": "",
      "texto": "Da luz o lançarão nas trevas"
    },
    "19": {
      "título": "",
      "texto": "Não terá filho nem posteridade"
    },
    "20": {
      "título": "",
      "texto": "Do seu dia se espantarão"
    },
    "21": {
      "título": "",
      "texto": "Tais são, na verdade,"
    }
  }
}