  "versículos": {
    "1": {
      "título": "O castigo está próximo",
      "texto": "“Toque a trombeta!"
    },
    "2": {
      "título": "",
      "texto": "Eles me invocam, dizendo:"
    },
    "3": {
      "título": "",
      "texto": "Mas Israel rejeitou o que é bom;"
    },
    "4": {
      "título": "",
      "texto": "“Eles estabeleceram reis,"
    },
    "5": {
      "título": "",
      "texto": "O seu bezerro, ó Samaria,"
    },
    "6": {
      "título": "",
      "texto": "Porque esse bezerro"
    },
    "7": {
      "título": "",
      "texto": "“Porque semeiam ventos"
    },
    "8": {
      "título": "",
      "texto": "Israel foi devorado."
    },
    "9": {
      "título": "",
      "texto": "Porque foram pedir ajuda"
    },
    "10": {
      "título": "",
      "texto": "Todavia, ainda que contratem"
    },
    "11": {
      "título": "",
      "texto": "“Visto que Efraim multiplicou"
    },
    "12": {
      "título": "",
      "texto": "Embora eu lhe escreva"
    },
    "13": {
      "título": "",
      "texto": "Amam o sacrifício;"
    },
    "14": {
      "título": "",
      "texto": "Porque Israel se esqueceu"
    }
  }
