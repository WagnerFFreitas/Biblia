{
  "livro": "Miquéias",
  "capítulo": 1,
  "versículos": {
    "1": {
      "título": "",
      "texto": "Palavra do Senhor que em visão veio a Miqueias, de Moresete, a respeito de Samaria e Jerusalém. Isso aconteceu nos dias de Jotão, Acaz e Ezequias, reis de Judá."
    },
    "2": {
      "título": "Ameaças contra Samaria e Jerusalém",
      "texto": "“Escutem, todos os povos!"
    },
    "3": {
      "título": "",
      "texto": "Porque eis que o Senhor"
    },
    "4": {
      "título": "",
      "texto": "Os montes debaixo dele"
    },
    "5": {
      "título": "",
      "texto": "“Tudo isso por causa"
    },
    "6": {
      "título": "",
      "texto": "Por isso, farei de Samaria"
    },
    "7": {
      "título": "",
      "texto": "Todas as suas imagens"
    },
    "8": {
      "título": "",
      "texto": "“Por isso, lamento e choro;"
    },
    "9": {
      "título": "",
      "texto": "Porque as feridas de Samaria"
    },
    "10": {
      "título": "",
      "texto": "Não anunciem isso em Gate,"
    },
    "11": {
      "título": "",
      "texto": "Moradores de Safir,"
    },
    "12": {
      "título": "",
      "texto": "Os moradores de Marote"
    },
    "13": {
      "título": "",
      "texto": "Moradores de Laquis,"
    },
    "14": {
      "título": "",
      "texto": "Portanto, vocês darão presentes"
    },
    "15": {
      "título": "",
      "texto": "Enviarei ainda quem tomará"
    },
    "16": {
      "título": "",
      "texto": "Cortem os cabelos"
    }
  }
}