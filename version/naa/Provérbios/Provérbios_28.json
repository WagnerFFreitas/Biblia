{
  "livro": "Provérbios",
  "capítulo": 28,
  "versículos": {
    "1": {
      "título": "",
      "texto": "Os ímpios fogem, mesmo quando"
    },
    "2": {
      "título": "",
      "texto": "Por causa da transgressão"
    },
    "3": {
      "título": "",
      "texto": "O pobre que oprime os pobres"
    },
    "4": {
      "título": "",
      "texto": "Os que abandonam a lei"
    },
    "5": {
      "título": "",
      "texto": "Os maus não entendem"
    },
    "6": {
      "título": "",
      "texto": "Melhor é o pobre"
    },
    "7": {
      "título": "",
      "texto": "Quem guarda a lei"
    },
    "8": {
      "título": "",
      "texto": "Quem aumenta os seus bens"
    },
    "9": {
      "título": "",
      "texto": "Quem desvia os ouvidos"
    },
    "10": {
      "título": "",
      "texto": "Quem desvia os retos"
    },
    "11": {
      "título": "",
      "texto": "O homem rico é sábio"
    },
    "12": {
      "título": "",
      "texto": "Quando os justos triunfam,"
    },
    "13": {
      "título": "",
      "texto": "Quem encobre"
    },
    "14": {
      "título": "",
      "texto": "Feliz é aquele que sempre"
    },
    "15": {
      "título": "",
      "texto": "Como leão que ruge"
    },
    "16": {
      "título": "",
      "texto": "O príncipe sem juízo"
    },
    "17": {
      "título": "",
      "texto": "O assassino carregado de culpa"
    },
    "18": {
      "título": "",
      "texto": "Quem anda em integridade"
    },
    "19": {
      "título": "",
      "texto": "O que lavra a sua terra"
    },
    "20": {
      "título": "",
      "texto": "O homem fiel será"
    },
    "21": {
      "título": "",
      "texto": "Parcialidade não é bom,"
    },
    "22": {
      "título": "",
      "texto": "O ganancioso corre"
    },
    "23": {
      "título": "",
      "texto": "Quem repreende alguém"
    },
    "24": {
      "título": "",
      "texto": "Quem rouba o seu pai"
    },
    "25": {
      "título": "",
      "texto": "O cobiçoso provoca discórdias,"
    },
    "26": {
      "título": "",
      "texto": "Quem confia"
    },
    "27": {
      "título": "",
      "texto": "Quem dá aos pobres"
    },
    "28": {
      "título": "",
      "texto": "Quando os maus se levantam,"
    }
  }
}