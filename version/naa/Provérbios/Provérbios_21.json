{
  "livro": "Provérbios",
  "capítulo": 21,
  "versículos": {
    "1": {
      "título": "",
      "texto": "Como correntes de águas,"
    },
    "2": {
      "título": "",
      "texto": "Todo caminho de uma pessoa"
    },
    "3": {
      "título": "",
      "texto": "Fazer justiça e julgar com retidão"
    },
    "4": {
      "título": "",
      "texto": "Olhar arrogante"
    },
    "5": {
      "título": "",
      "texto": "Os planos de quem é esforçado"
    },
    "6": {
      "título": "",
      "texto": "Fazer fortuna"
    },
    "7": {
      "título": "",
      "texto": "A violência dos ímpios"
    },
    "8": {
      "título": "",
      "texto": "O caminho do culpado"
    },
    "9": {
      "título": "",
      "texto": "Melhor é morar"
    },
    "10": {
      "título": "",
      "texto": "A alma do ímpio deseja o mal;"
    },
    "11": {
      "título": "",
      "texto": "Quando o zombador é castigado,"
    },
    "12": {
      "título": "",
      "texto": "Deus, o justo, observa"
    },
    "13": {
      "título": "",
      "texto": "Quem tapa os ouvidos"
    },
    "14": {
      "título": "",
      "texto": "O presente que se dá em segredo"
    },
    "15": {
      "título": "",
      "texto": "Praticar a justiça"
    },
    "16": {
      "título": "",
      "texto": "Quem se desvia do caminho"
    },
    "17": {
      "título": "",
      "texto": "Quem ama os prazeres"
    },
    "18": {
      "título": "",
      "texto": "O ímpio serve de resgate"
    },
    "19": {
      "título": "",
      "texto": "Melhor é morar"
    },
    "20": {
      "título": "",
      "texto": "Na casa do sábio"
    },
    "21": {
      "título": "",
      "texto": "Quem segue a justiça"
    },
    "22": {
      "título": "",
      "texto": "O sábio escala a cidade"
    },
    "23": {
      "título": "",
      "texto": "Quem guarda a boca e a língua"
    },
    "24": {
      "título": "",
      "texto": "Quanto ao orgulhoso"
    },
    "25": {
      "título": "",
      "texto": "O preguiçoso morre desejando,"
    },
    "26": {
      "título": "",
      "texto": "O cobiçoso cobiça todo o dia,"
    },
    "27": {
      "título": "",
      "texto": "O sacrifício dos ímpios"
    },
    "28": {
      "título": "",
      "texto": "A testemunha falsa perecerá,"
    },
    "29": {
      "título": "",
      "texto": "O ímpio aparenta determinação,"
    },
    "30": {
      "título": "",
      "texto": "Não há sabedoria,"
    },
    "31": {
      "título": "",
      "texto": "O cavalo é preparado"
    }
  }
}