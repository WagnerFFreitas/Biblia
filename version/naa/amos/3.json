{
  "livro": "Amós",
  "capítulo": 3,
  "versículos": {
    "1": {
      "título": "O castigo contra a maldade de Israel",
      "texto": "Ouçam a palavra que o Senhor fala contra vocês, filhos de Israel, contra toda a família que ele tirou da terra do Egito. Ele diz:"
    },
    "2": {
      "título": "",
      "texto": "“De todas as famílias da terra,"
    },
    "3": {
      "título": "",
      "texto": "Será que dois andarão juntos,"
    },
    "4": {
      "título": "",
      "texto": "Será que o leão"
    },
    "5": {
      "título": "",
      "texto": "Será que a ave"
    },
    "6": {
      "título": "",
      "texto": "Será possível tocar a trombeta"
    },
    "7": {
      "título": "",
      "texto": "“Certamente o Senhor Deus"
    },
    "8": {
      "título": "",
      "texto": "O leão rugiu,"
    },
    "9": {
      "título": "",
      "texto": "“Proclamem nas fortalezas"
    },
    "10": {
      "título": "",
      "texto": "Porque o povo de Samaria"
    },
    "11": {
      "título": "",
      "texto": "Portanto, assim diz o Senhor Deus :"
    },
    "12": {
      "título": "",
      "texto": "Assim diz o Senhor :"
    },
    "13": {
      "título": "",
      "texto": "“Ouçam e deem testemunho"
    },
    "14": {
      "título": "",
      "texto": "“No dia em que eu punir Israel,"
    },
    "15": {
      "título": "",
      "texto": "Derrubarei a casa de inverno"
    }
  }
}