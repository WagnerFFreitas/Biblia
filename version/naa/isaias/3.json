{
  "livro": "Isaías",
  "capítulo": 3,
  "versículos": {
    "1": {
      "título": "Julgamento de Judá e de Jerusalém",
      "texto": "Porque eis que o Senhor,"
    },
    "2": {
      "título": "",
      "texto": "Ele vai tirar também o valente,"
    },
    "3": {
      "título": "",
      "texto": "o capitão de cinquenta, o nobre,"
    },
    "4": {
      "título": "",
      "texto": "O Senhor lhes dará meninos"
    },
    "5": {
      "título": "",
      "texto": "Entre o povo,"
    },
    "6": {
      "título": "",
      "texto": "Quando alguém for falar"
    },
    "7": {
      "título": "",
      "texto": "naquele dia o outro"
    },
    "8": {
      "título": "",
      "texto": "Jerusalém tropeçou,"
    },
    "9": {
      "título": "",
      "texto": "O aspecto do rosto"
    },
    "10": {
      "título": "",
      "texto": "Digam ao justo"
    },
    "11": {
      "título": "",
      "texto": "Ai do ímpio! Tudo irá mal com ele;"
    },
    "12": {
      "título": "",
      "texto": "Os opressores do meu povo"
    },
    "13": {
      "título": "",
      "texto": "O Senhor se levanta para"
    },
    "14": {
      "título": "",
      "texto": "O Senhor entra em juízo"
    },
    "15": {
      "título": "",
      "texto": "Com que direito vocês esmagam"
    },
    "16": {
      "título": "Julgamento das filhas de Sião",
      "texto": "O Senhor disse:"
    },
    "17": {
      "título": "",
      "texto": "o Senhor fará com que"
    },
    "18": {
      "título": "",
      "texto": "Naquele dia, o Senhor tirará os enfeites que elas têm nos tornozelos, as toucas e os ornamentos em forma de meia-lua;"
    },
    "19": {
      "título": "",
      "texto": "os pendentes, os braceletes e os véus esvoaçantes;"
    },
    "20": {
      "título": "",
      "texto": "os turbantes, as correntinhas para os tornozelos, os cintos, as caixinhas de perfume e os amuletos;"
    },
    "21": {
      "título": "",
      "texto": "os anéis e as joias pendentes do nariz;"
    },
    "22": {
      "título": "",
      "texto": "os vestidos de festa, os mantos, os xales e as bolsas;"
    },
    "23": {
      "título": "",
      "texto": "os espelhos, as roupas finíssimas, os enfeites para a cabeça e os véus."
    },
    "24": {
      "título": "",
      "texto": "Em vez de perfume"
    },
    "25": {
      "título": "",
      "texto": "Os homens de Jerusalém"
    },
    "26": {
      "título": "",
      "texto": "Os portões da cidade chorarão"
    }
  }
}