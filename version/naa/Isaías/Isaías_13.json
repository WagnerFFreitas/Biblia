{
  "livro": "Isaías",
  "capítulo": 13,
  "versículos": {
    "1": {
      "título": "Profecia contra a Babilônia",
      "texto": "Sentença contra a Babilônia que Isaías, filho de Amoz, recebeu numa visão."
    },
    "2": {
      "título": "",
      "texto": "Sobre um monte escalvado,"
    },
    "3": {
      "título": "",
      "texto": "Eu dei ordens"
    },
    "4": {
      "título": "",
      "texto": "Já se ouve sobre os montes"
    },
    "5": {
      "título": "",
      "texto": "Eles vêm de um país remoto,"
    },
    "6": {
      "título": "",
      "texto": "Lamentem, pois o Dia do Senhor"
    },
    "7": {
      "título": "",
      "texto": "Por isso, todas as mãos"
    },
    "8": {
      "título": "",
      "texto": "Ficarão apavorados;"
    },
    "9": {
      "título": "",
      "texto": "Eis que vem o Dia do Senhor ,"
    },
    "10": {
      "título": "",
      "texto": "Porque as estrelas"
    },
    "11": {
      "título": "",
      "texto": "“Castigarei o mundo"
    },
    "12": {
      "título": "",
      "texto": "Farei com que as pessoas"
    },
    "13": {
      "título": "",
      "texto": "Portanto, farei estremecer"
    },
    "14": {
      "título": "",
      "texto": "“Cada um será como a gazela"
    },
    "15": {
      "título": "",
      "texto": "Quem for achado"
    },
    "16": {
      "título": "",
      "texto": "As crianças serão esmagadas"
    },
    "17": {
      "título": "",
      "texto": "“Eis que contra os babilônios"
    },
    "18": {
      "título": "",
      "texto": "As suas flechas matarão os jovens;"
    },
    "19": {
      "título": "",
      "texto": "Babilônia, a joia dos reinos,"
    },
    "20": {
      "título": "",
      "texto": "Nunca mais será habitada,"
    },
    "21": {
      "título": "",
      "texto": "Porém, nela, os animais"
    },
    "22": {
      "título": "",
      "texto": "As hienas uivarão"
    }
  }
}