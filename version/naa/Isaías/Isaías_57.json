{
  "livro": "Isaías",
  "capítulo": 57,
  "versículos": {
    "1": {
      "título": "A idolatria de Israel é condenada",
      "texto": "“Os justos perecem,"
    },
    "2": {
      "título": "",
      "texto": "e entra na paz;"
    },
    "3": {
      "título": "",
      "texto": "“Mas vocês, filhos de feiticeira,"
    },
    "4": {
      "título": "",
      "texto": "De quem vocês estão zombando?"
    },
    "5": {
      "título": "",
      "texto": "vocês que se inflamam"
    },
    "6": {
      "título": "",
      "texto": "Entre as pedras lisas dos ribeiros"
    },
    "7": {
      "título": "",
      "texto": "Sobre um monte alto e elevado"
    },
    "8": {
      "título": "",
      "texto": "Atrás das portas e das ombreiras"
    },
    "9": {
      "título": "",
      "texto": "“Você vai ao rei com óleo"
    },
    "10": {
      "título": "",
      "texto": "Nessa longa viagem"
    },
    "11": {
      "título": "",
      "texto": "“Mas de quem você"
    },
    "12": {
      "título": "",
      "texto": "Eu publicarei essa sua justiça"
    },
    "13": {
      "título": "",
      "texto": "Quando você clamar por ajuda,"
    },
    "14": {
      "título": "Mensagem de paz para os arrependidos",
      "texto": "Então se dirá:"
    },
    "15": {
      "título": "",
      "texto": "Porque assim diz o Alto,"
    },
    "16": {
      "título": "",
      "texto": "Pois não farei litígio"
    },
    "17": {
      "título": "",
      "texto": "Por causa da maldade"
    },
    "18": {
      "título": "",
      "texto": "“Tenho visto os caminhos"
    },
    "19": {
      "título": "",
      "texto": "Como fruto dos seus lábios"
    },
    "20": {
      "título": "",
      "texto": "Mas os ímpios são"
    },
    "21": {
      "título": "",
      "texto": "Para os ímpios”, diz o meu Deus,"
    }
  }
}