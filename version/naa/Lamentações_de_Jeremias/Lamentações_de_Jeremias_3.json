{
  "livro": "Lamentações de Jeremias",
  "capítulo": 3,
  "versículos": {
    "1": {
      "título": "Castigo, arrependimento e esperança",
      "texto": "Eu sou o homem"
    },
    "2": {
      "título": "",
      "texto": "Ele me levou e me fez andar"
    },
    "3": {
      "título": "",
      "texto": "Certamente ele voltou"
    },
    "4": {
      "título": "",
      "texto": "Fez envelhecer"
    },
    "5": {
      "título": "",
      "texto": "Construiu rampas de ataque"
    },
    "6": {
      "título": "",
      "texto": "Ele me faz habitar na escuridão,"
    },
    "7": {
      "título": "",
      "texto": "Cercou-me de um muro,"
    },
    "8": {
      "título": "",
      "texto": "Mesmo quando clamo e grito,"
    },
    "9": {
      "título": "",
      "texto": "Fechou os meus caminhos"
    },
    "10": {
      "título": "",
      "texto": "Foi para mim como"
    },
    "11": {
      "título": "",
      "texto": "Desviou os meus caminhos"
    },
    "12": {
      "título": "",
      "texto": "Entesou o seu arco"
    },
    "13": {
      "título": "",
      "texto": "As flechas da sua aljava"
    },
    "14": {
      "título": "",
      "texto": "Fui feito motivo de riso"
    },
    "15": {
      "título": "",
      "texto": "Fartou-me de amarguras,"
    },
    "16": {
      "título": "",
      "texto": "Quebrou os meus dentes"
    },
    "17": {
      "título": "",
      "texto": "Já não sei o que é ter paz"
    },
    "18": {
      "título": "",
      "texto": "Então eu disse:"
    },
    "19": {
      "título": "",
      "texto": "Lembra-te"
    },
    "20": {
      "título": "",
      "texto": "Minha alma continuamente"
    },
    "21": {
      "título": "",
      "texto": "Quero trazer à memória"
    },
    "22": {
      "título": "",
      "texto": "As misericórdias"
    },
    "23": {
      "título": "",
      "texto": "renovam-se cada manhã."
    },
    "24": {
      "título": "",
      "texto": "“A minha porção é o Senhor ”,"
    },
    "25": {
      "título": "",
      "texto": "O Senhor é bom"
    },
    "26": {
      "título": "",
      "texto": "Bom é aguardar"
    },
    "27": {
      "título": "",
      "texto": "Bom é para o homem"
    },
    "28": {
      "título": "",
      "texto": "Que ele se assente solitário"
    },
    "29": {
      "título": "",
      "texto": "Ponha a sua boca no pó;"
    },
    "30": {
      "título": "",
      "texto": "Dê a face ao que o fere"
    },
    "31": {
      "título": "",
      "texto": "O Senhor não rejeitará"
    },
    "32": {
      "título": "",
      "texto": "Ainda que entristeça alguém,"
    },
    "33": {
      "título": "",
      "texto": "Porque não aflige"
    },
    "34": {
      "título": "",
      "texto": "Pisar debaixo dos pés"
    },
    "35": {
      "título": "",
      "texto": "perverter o direito do homem"
    },
    "36": {
      "título": "",
      "texto": "subverter a justiça num processo"
    },
    "37": {
      "título": "",
      "texto": "Quem é aquele que diz,"
    },
    "38": {
      "título": "",
      "texto": "Por acaso, não é"
    },
    "39": {
      "título": "",
      "texto": "Por que se queixa o homem?"
    },
    "40": {
      "título": "",
      "texto": "Examinemos bem"
    },
    "41": {
      "título": "",
      "texto": "Levantemos o coração,"
    },
    "42": {
      "título": "",
      "texto": "“Nós pecamos"
    },
    "43": {
      "título": "",
      "texto": "“Cobriste-nos de ira"
    },
    "44": {
      "título": "",
      "texto": "De nuvens te encobriste"
    },
    "45": {
      "título": "",
      "texto": "Como lixo e refugo nos puseste"
    },
    "46": {
      "título": "",
      "texto": "“Todos os nossos inimigos"
    },
    "47": {
      "título": "",
      "texto": "Sobre nós vieram"
    },
    "48": {
      "título": "",
      "texto": "Dos meus olhos"
    },
    "49": {
      "título": "",
      "texto": "Os meus olhos choram,"
    },
    "50": {
      "título": "",
      "texto": "até que o Senhor atenda"
    },
    "51": {
      "título": "",
      "texto": "O que vejo entristece"
    },
    "52": {
      "título": "",
      "texto": "Aqueles que sem motivo"
    },
    "53": {
      "título": "",
      "texto": "Lançaram-me vivo numa cova"
    },
    "54": {
      "título": "",
      "texto": "Águas correram"
    },
    "55": {
      "título": "",
      "texto": "Da mais profunda cova, Senhor ,"
    },
    "56": {
      "título": "",
      "texto": "Ouviste a minha voz,"
    },
    "57": {
      "título": "",
      "texto": "No dia em que te invoquei,"
    },
    "58": {
      "título": "",
      "texto": "Defendeste a minha causa,"
    },
    "59": {
      "título": "",
      "texto": "Viste, Senhor , a injustiça"
    },
    "60": {
      "título": "",
      "texto": "Viste toda a sua vingança,"
    },
    "61": {
      "título": "",
      "texto": "Ouviste as suas afrontas,"
    },
    "62": {
      "título": "",
      "texto": "as acusações que me fazem"
    },
    "63": {
      "título": "",
      "texto": "Observa-os quando se assentam"
    },
    "64": {
      "título": "",
      "texto": "Tu, Senhor , lhes retribuirás"
    },
    "65": {
      "título": "",
      "texto": "Tu lhes darás dureza de coração,"
    },
    "66": {
      "título": "",
      "texto": "Na tua ira, os perseguirás,"
    }
  }
}