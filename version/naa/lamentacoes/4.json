{
    "livro": "Lamentações de Jeremias",
    "capitulo": 4,
    "titulos": {
        "1": "Os sofrimentos do cerco"
    },
    "versiculos": {
        "1": "Como se escureceu o ouro!",
        "2": "Os nobres filhos de Sião,",
        "3": "Até os chacais",
        "4": "A língua do bebê",
        "5": "Os que se alimentavam",
        "6": "Porque a maldade",
        "7": "Os seus príncipes",
        "8": "Mas agora o aspecto deles",
        "9": "Mais felizes foram",
        "10": "As mãos das mulheres",
        "11": "O Senhor deu cumprimento",
        "12": "Nem os reis da terra,",
        "13": "Tudo isso aconteceu",
        "14": "Vagueiam como cegos",
        "15": "E o povo grita:",
        "16": "A ira do Senhor os espalhou;",
        "17": "Os nossos olhos",
        "18": "Espreitavam",
        "19": "Os nossos perseguidores",
        "20": "O ungido do Senhor ,",
        "21": "Exulte e alegre-se agora,",
        "22": "O castigo por causa"
    }
}